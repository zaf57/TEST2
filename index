<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://github.com/zaf57/benimle-evlenir-misin/blob/main/black%20horse.png?raw=true');
            background-size: cover;
            background-position: center;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .heart {
            position: fixed;
            bottom: 50px;
            right: 50px;
            background-color: red;
            width: 50px;
            height: 50px;
            transform: rotate(15deg);
            -webkit-transform: rotate(15deg);
            -moz-transform: rotate(15deg);
        }

        .heart:before,
        .heart:after {
            content: '';
            position: absolute;
            background-color: red;
            width: 50px;
            height: 50px;
            border-radius: 50px;
        }

        .heart:before {
            top: -25px;
            left: 0;
        }

        .heart:after {
            top: 0;
            left: -25px;
        }
    </style>
</head>
<body>
    <div class="heart"></div>

    <script>
        var heart = document.querySelector('.heart');
        var maxX = window.innerWidth - heart.offsetWidth;
        var maxY = window.innerHeight - heart.offsetHeight;

        function moveHeart() {
            var xPos = Math.random() * maxX;
            var yPos = Math.random() * maxY;
            heart.style.position = 'absolute';
            heart.style.left = xPos + 'px';
            heart.style.top = yPos + 'px';
        }

        setInterval(moveHeart, 2000); // Change la position toutes les 2 secondes (2000 millisecondes)
    </script>
</body>
</html>
